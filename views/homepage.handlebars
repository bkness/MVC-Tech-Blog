<b>
    <h1 id="blog-post-text">Blog Posts</h1>
</b><br>
<div id="blogs">
    {{#each blogs as |blog|}}
    <div class="top-container" id="blog-post">
        <div id="blog-title">
            <h2>{{blog.title}} </h2>
            <p><i>Published by {{blog.user.name}} on {{format_date dateCreated}} </i> </p>
        </div>
        <div class="blog-body" id="content-body">
            <p>{{blog.contentPost}}</p>
        </div>

        <div id="blog-comment">
            <a href="/blog/{{id}}">Comment</a>
        </div>
    </div>
    <p>
        <label id="blog_id" hidden="hidden"> {{blog.id}} </label>
    </p>

    {{/each}}
</div>

<script src="/js/delete-blog.js"></script>